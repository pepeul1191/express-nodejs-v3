<%- include('../partials/blank_header') %>
<div class="mdl-layout mdl-js-layout mdl-color--grey-100">
  <!-- Login -->
	<main class="mdl-layout__content hide" id="login-container">
		<div class="mdl-card mdl-shadow--6dp">
			<div class="mdl-card__title mdl-color--primary mdl-color-text--white">
				<h2 class="mdl-card__title-text">
          <%= contents['index']['titulo_form_login'][lang] %>
        </h2>
        <span class="icon-container">
          <i class="mdl-icon-toggle__label material-icons">lock</i>
        </span>
			</div>
	  	<div class="mdl-card__supporting-text">
				<form action="<%=constants['base_url']%>login/access" method="post">
					<div class="mdl-textfield mdl-js-textfield">
						<input class="mdl-textfield__input" type="text" id="username" />
						<label class="mdl-textfield__label" for="username" name="user"><%= contents['index']['placeholder_user'][lang] %></label>
					</div>
					<div class="mdl-textfield mdl-js-textfield">
						<input class="mdl-textfield__input" type="password" id="userpass" />
						<label class="mdl-textfield__label" for="userpass" name="password"><%= contents['index']['placeholder_password'][lang] %></label>
					</div>
          <input type="hidden" name="<%=constants['csrf']['key']%>" value="<%=constants['csrf']['secret']%>">
          <p class="color-error message" id="login-message"><%=message%></p>
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored mdl-color-text--white full" type="submit">
            <%= contents['index']['text_button_login'][lang] %>
          </button>
				</form>
			</div>
			<div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-js-button mdl-button--primary" href="<%=constants['base_url']%>login/#/sign_in">
          <%= contents['index']['label_sigin'][lang] %>
        </a>
        <a id="forgotpassword" class="mdl-button mdl-js-button mdl-button--primary pull-right" href="<%=constants['base_url']%>login/#/forgot_password">
          <%= contents['index']['label_password'][lang] %>
        </a>
			</div>
		</div>
	</main>
  <!-- Forgot Password -->
  <main class="mdl-layout__content hide" id="forgot-password-container">
    <div class="mdl-card mdl-shadow--6dp">
      <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
        <h2 class="mdl-card__title-text">
          <%= contents['index']['titulo_form_forgot_password'][lang] %>
        </h2>
        <span class="icon-container">
          <i class="mdl-icon-toggle__label material-icons">mail_outline</i>
        </span>
      </div>
      <div class="mdl-card__supporting-text">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="email" id="txtEmail"/>
          <label class="mdl-textfield__label" for="txtEmail"><%= contents['index']['placeholder_email'][lang] %></label>
        </div>
        <input type="hidden" name="<%=constants['csrf']['key']%>" value="<%=constants['csrf']['secret']%>">
        <p class="color-error message" id="forgot-password-message"><%=message%></p>
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored mdl-color-text--white full" type="submit">
          <%= contents['index']['text_button_send_password'][lang] %>
        </button>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-js-button mdl-button--primary" href="<%=constants['base_url']%>login/#/">
          <%= contents['index']['text_button_back_to_login'][lang] %>
        </a>
      </div>
    </div>
  </main>
  <!-- Sign In -->
  <main class="mdl-layout__content hide" id="sign-in-container">
    <div class="mdl-card mdl-shadow--6dp">
      <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
        <h2 class="mdl-card__title-text">
          <%= contents['index']['titulo_form_sign_in'][lang] %>
          <span class="icon-container">
            <i class="mdl-icon-toggle__label material-icons">face</i>
          </span>
        </h2>
      </div>
      <div class="mdl-card__supporting-text">
        <p class="color-error message" id="sign-in-message"><%=message%></p>
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored mdl-color-text--white full" type="submit">
          <%= contents['index']['text_button_sign_in'][lang] %>
        </button>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-js-button mdl-button--primary" href="<%=constants['base_url']%>login/#/">
          <%= contents['index']['text_button_back_to_login'][lang] %>
        </a>
      </div>
    </div>
  </main>
</div>
<%- include('../partials/blank_footer') %>
